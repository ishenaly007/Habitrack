<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_item_vector"
        android:layout_height="150dp"
        android:layout_width="156dp"
        android:scaleType="centerCrop"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white_gray"/>

    <ImageView
        android:layout_width="84dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/rv_heart"
        app:layout_constraintBottom_toTopOf="@id/tv_"
        app:layout_constraintStart_toStartOf="@id/tv_" />

    <TextView
        android:id="@+id/tv_"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="92dp"
        android:text="Здоровый образ жизни"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/img_item_vector"
        app:layout_constraintTop_toTopOf="@id/img_item_vector" />


</androidx.constraintlayout.widget.ConstraintLayout>